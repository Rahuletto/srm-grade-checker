---
import Layout from "../layouts/Layout.astro";

import CGPA from "../components/cgpa";
---

<Layout title="Welcome to Astro.">
  <main>
    <header id="head">
      <h2 class="title">GradeX</h2>
    </header>
    <div class="container">
      <div class="row">
        <div class="col-6">
          <div class="card">
            <h2>CGPA Calculator</h2>
            <CGPA client:load />
          </div>
        </div>
        <div class="col-6">
          <div class="card">
            <h2>Grade Calculator</h2>
            <div class="sub-card"></div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  #head {
    padding: 28px 36px;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: start;
    -ms-flex-align: start;
    align-items: flex-start;
    width: 100vw;
  }
  .container {
    max-width: none;
  }
  .row {
    margin: 12px;
  }
  .title {
    font-size: 36px;
    color: var(--brand);
    font-weight: 600;
    text-align: left;
  }
  .card {
    height: 80vh;
    background-color: var(--card);
    color: var(--text-color);
    border-radius: 38px;
    border: 1px solid var(--border);
    padding: 1vh;
  }
  .card h2 {
    margin: 8px 16px;
    color: #f5f5f5;
  }
  main {
    background: var(--bg);
    margin: auto;
    color: white;
    font-size: 20px;
    line-height: 1.6;
    height: 100vh;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
  }

  .sub-card {
    background-color: var(--incard);
    height: 100%;
    border-radius: 32px;
    border-color: var(--border);
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    border: 1px solid var(--border);
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    padding: 10px;
  }

  .cgpa {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: baseline;
    -ms-flex-align: baseline;
    align-items: baseline;
    gap: 6px;
  }
  .text {
    color: #3e3f3e !important;
    font-weight: 600;
    font-size: 14px;
  }

  .cgpa h1 {
    font-size: 40px;
    color: var(--brand) !important;
  }
</style>
