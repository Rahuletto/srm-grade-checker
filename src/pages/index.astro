type grade = 'O' | 'A+' | 'A' | 'B+' | 'B' | 'C' | 'W' | 'Abs/Det'
const grade_points = {
    "O":10,
    "A+":9,
    "A":8,
    "B+":7,
    "B":6,
    "C":5.5,
    "W":0,
    "F":0,
    "Ab":0,
    "I":0,
    "*":0
};

const courses = [{ cred: 0, grade: 'O'},{ cred: 0, grade: 'O'}, { cred: 0, grade: 'O'}];
