            CGPA Calculator
            <div class="sub-card">
              <div class="cgpa"><h1>6.9</h1><p>CGPA</p></div>
              {
                courses.map((el, index) => 
                  (<CourseSelect
                    cred={el.cred}
                    cno={index + 1}
                    grade={el.grade as grade}
							
