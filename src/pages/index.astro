---
import Layout from '../layouts/Layout.astro';
import CGPA from '../components/cgpa';
import GradeCalculator from '../components/grade';
import Login from '../components/login';
---

<Layout title="GradeX">
  <main>
    <header id="head">
      <h2 class="title">GradeX</h2>
      <a
        data-alt="open source code"
        target="_blank"
        title="Source Code"
        href="https://github.com/root-daemon/srm-grade-checker"
        ><i class:list={['bi', 'bi-github']}></i></a
      >
    </header>
    <div class="container">
      <div class="row">
        <div class="col-6">
          <div id="cgpa"></div>
          <div class="card">
            <h2>CGPA Calculator</h2>
            <CGPA client:load />
          </div>
        </div>
        <div class="col-6">
          <div class="card">
            <h2>Grade Calculator</h2>
            <GradeCalculator client:load />
            <button
              id="loginBtn"
              class="btn btn-success add-course-button w-40 my-3 mx-3"
            >
              <i class="bi bi-plus"></i> Get Internals
            </button>
          </div>
        </div>
        <div class="mobile">
          <a href="#cgpa" id="cgpa-toggle" class="active">CGPA</a>
          <a id="grade-toggle" href="#grade">Grade</a>
        </div>
        <div class="login-box">
          <div class="card d-flex login-subbox">
            <Login client:load />
          </div>
        </div>
      </div>
    </div>
  </main>
  <script>
    import { addCourse } from '@/markStore';
    import { setCookie } from 'utils/cookies';

    const ct = document.getElementById('cgpa-toggle');
    const gt = document.getElementById('grade-toggle');

    ct.addEventListener('click', (e) => {
      ct.classList.add('active');
      gt.classList.remove('active');
    });
    gt.addEventListener('click', (e) => {
      gt.classList.add('active');
      ct.classList.remove('active');
    });

    document.getElementById('loginBtn').addEventListener('click', function () {
      document.getElementById('login-box').style.display = 'block';
    });

    document.addEventListener('DOMContentLoaded', function () {
      const loginBtn = document.querySelector('#loginBtn'); // Select by ID

      loginBtn.addEventListener('click', function () {
        const login = prompt('Username');
        const pass = prompt('Password');

        fetch('https://proscrape.vercel.app/api/login', {
          method: 'POST',
          headers: {
            Origin: 'https://proscrape.vercel.app',
            Referer: 'https://proscrape.vercel.app',
            Host: 'proscrape.vercel.app',
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            account: login,
            password: pass,
          }),
        })
          .then((response) => response.json())
          .then((res) => {
            if (res.cookies) {
              setCookie('token', res.cookies);

              fetch('https://proscrape.vercel.app/api/marks', {
                method: 'GET',
                headers: {
                  'X-CSRF-Token': res.cookies,
                  'Set-Cookie': res.cookies,
                  Cookie: res.cookies,
                  'Content-Type': 'application/json',
                },
              }).then((d) =>
                d.json().then((res) => {
                  res.marks.map((subjectMark: any) => {
                    addCourse({
                      courseCode: subjectMark.courseCode,
                      courseName: subjectMark.courseName,
                      courseType: subjectMark.courseType,
                      overall: {
                        scored: subjectMark.overall['scored'],
                        total: subjectMark.overall['total'],
                      },
                      testPerformance: [],
                    });
                  });
                })
              );
            }
          })
          .catch((error) => {
            console.error('Error:', error);
          });
      });
    });

    // Define closeLoginBox function in the global scope
    function closeLoginBox() {
      const loginBox = document.querySelector('.login-box'); // Select by class name
      loginBox.style.display = 'none';
    }
  </script>

  <style>
    #head {
      padding: 28px 36px;
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: start;
      -ms-flex-align: start;
      align-items: flex-start;
      -webkit-box-align: center;
      -ms-flex-align: center;
      align-items: center;
      width: 100vw;
      -webkit-box-pack: justify;
      -ms-flex-pack: justify;
      justify-content: space-between;
    }
    .login-subbox {
      justify-content: center;
      align-items: center;
      width: 550px;
      height: 350px !important;
    }

    .login-box {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      justify-content: center;
      align-items: center;
    }
    .bi-github {
      display: block;
      font-size: 28px;
      color: var(--border);
      cursor: pointer;
      -webkit-transition: 0.4s cubic-bezier(0.21, 0.67, 0.31, 0.92);
      -o-transition: 0.4s cubic-bezier(0.21, 0.67, 0.31, 0.92);
      transition: 0.4s cubic-bezier(0.21, 0.67, 0.31, 0.92);
    }
    .bi-github:hover {
      -webkit-transform: scale(1.1);
      -ms-transform: scale(1.1);
      transform: scale(1.1);
      text-shadow: 0px 0px 8px var(--border);
      color: var(--brand);
      opacity: 0.8;
    }
    .container {
      max-width: none;
    }
    .row {
      margin: 12px;
    }
    .title {
      font-size: 36px;
      color: var(--brand);
      font-weight: 600;
      text-align: left;
      -webkit-transition: 0.3s cubic-bezier(0.21, 0.67, 0.31, 0.92);
      -o-transition: 0.3s cubic-bezier(0.21, 0.67, 0.31, 0.92);
      transition: 0.3s cubic-bezier(0.21, 0.67, 0.31, 0.92);
      cursor: cell;
    }

    .title:hover {
      -webkit-text-stroke-width: 0.5px;
      -webkit-text-stroke-color: var(--brand);
      color: transparent;
      font-size: 34px;
    }

    .card {
      height: 80vh;
      background-color: var(--card);
      color: var(--text-color);
      border-radius: 38px;
      border: 1px solid var(--border);
      padding: 1vh;
    }
    .card h2 {
      margin: 8px 16px;
      color: #f5f5f5;
    }
    main {
      background: var(--bg);
      margin: auto;
      color: white;
      font-size: 20px;
      line-height: 1.6;
      height: 100vh;
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -ms-flex-align: center;
      align-items: center;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -ms-flex-direction: column;
      flex-direction: column;
    }

    .sub-card {
      background-color: var(--incard);
      height: 100%;
      border-radius: 32px;
      border-color: var(--border);
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      border: 1px solid var(--border);
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -ms-flex-direction: column;
      flex-direction: column;
      -webkit-box-align: center;
      -ms-flex-align: center;
      align-items: center;
      -webkit-box-pack: center;
      -ms-flex-pack: center;
      justify-content: center;
      padding: 10px;
    }

    .cgpa {
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: baseline;
      -ms-flex-align: baseline;
      align-items: baseline;
      gap: 6px;
    }
    .text {
      color: #3e3f3e !important;
      font-weight: 600;
      font-size: 14px;
    }

    .cgpa h1 {
      font-size: 40px;
      color: var(--brand) !important;
    }

    .mobile {
      display: none;
      position: fixed;
      bottom: 18px;
      padding: 4px;
      background: #0e100e;
      border-radius: 14px;
      -webkit-box-shadow: 0px 0px 20px 20px rgba(0, 0, 0, 0.4);
      box-shadow: 0px 0px 20px 20px rgba(0, 0, 0, 0.4);
    }

    .mobile a {
      padding: 6px 36px;
      font-size: 16px;
      border-radius: 10px;
      color: #d8ffc6;
    }

    .mobile a.active {
      background: var(--brand);
      color: var(--bg);
    }

    /* Tablet */
    @media only screen and (max-width: 810px) {
      .row {
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -ms-flex-direction: column;
        flex-direction: column;
        gap: 16px;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
      }
      .col-6 {
        width: 100vw;
      }
    }

    /* Mobile */
    @media only screen and (max-width: 500px) {
      .container {
        padding: 5px !important;
      }
      .card h2 {
        margin: 9px 18px;
      }

      .card {
        padding: 0.5vh;
        border-radius: 28px;
      }

      .sub-card {
        border-radius: 26px;
      }

      .mobile {
        display: -webkit-box !important;
        display: -ms-flexbox !important;
        display: flex !important;
      }
      .col-6 {
        padding: 0px;
      }
    }

    @media only screen and (max-width: 360px) {
      .mobile {
        display: -webkit-box !important;
        display: -ms-flexbox !important;
        display: flex !important;
      }
      .row {
        margin: 0px;
      }
    }
  </style>
</Layout>
